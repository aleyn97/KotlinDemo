<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_list_one"
    android:weightSum="15">

    <TextView
        android:id="@+id/record_user_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/shape_list_left"
        android:gravity="center" />

    <TextView
        android:id="@+id/record_user_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:drawableRight="@drawable/shape_list_one"
        android:gravity="center" />

    <TextView
        android:id="@+id/record_user_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/shape_list_right"
        android:gravity="center" />
</LinearLayout>