<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_img"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="sh.com.pcl.MainActivity">


    <ImageView
        android:id="@+id/img_SouHou"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_margin="10dp"
        android:background="@mipmap/login_cen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/svg_account" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/Login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/login_account"
            android:background="@null"
            android:hint="账号"
            android:padding="10dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White" />


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_account"
            android:padding="10dp"
            android:src="@drawable/svg_password" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/Login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_account"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/login_account"
            android:background="@null"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/White" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <CheckBox
            android:id="@+id/cb_rmb_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/White"
            android:onClick="onClick"
            android:text="记住密码"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/forgot_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:text="忘记密码"
            android:textColor="@color/White" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_blue"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/Login"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Company_name"
            android:textColor="@color/White" />
    </RelativeLayout>

</LinearLayout>
